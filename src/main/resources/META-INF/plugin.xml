<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.borispristupa.fl2022itmosprl</id>
    <name>L Language Support</name>
    <vendor>borispristupa</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                language="L"
                name="L Language"
                implementationClass="com.github.borispristupa.fl2022itmosprl.lang.LLanguage$LLanguageFileType"
                fieldName="INSTANCE"
                extensions="llang"/>

        <lang.syntaxHighlighterFactory
                language="L"
                implementationClass="com.github.borispristupa.fl2022itmosprl.LSyntaxHighlighterFactory"/>

        <colorSettingsPage
                implementation="com.github.borispristupa.fl2022itmosprl.LColorSettingsPage"/>

        <lang.parserDefinition
            language="L"
            implementationClass="com.github.borispristupa.fl2022itmosprl.lang.LParserDefinition"/>

        <lang.refactoringSupport
            language="L"
            implementationClass="com.github.borispristupa.fl2022itmosprl.LRefactoringSupportProvider"/>

        <enterHandlerDelegate
                implementation="com.github.borispristupa.fl2022itmosprl.LSemicolonEnterHandler"/>
        <editorActionHandler
                action="EditorStartNewLine"
                implementationClass="com.github.borispristupa.fl2022itmosprl.LShiftEnterHandler"/>
    </extensions>
</idea-plugin>
